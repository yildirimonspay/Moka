@model Moka.Simulator.Models.PaymentCallbackViewModel
@{
    ViewData["Title"] = "Payment Callback";
}
<h2>Payment Callback</h2>
<dl class="row">
    <dt class="col-sm-2">OtherTrxCode</dt>
    <dd class="col-sm-10">@Model.Trx</dd>
    <dt class="col-sm-2">trxCode</dt>
    <dd class="col-sm-10">@Model.TrxCode</dd>
    <dt class="col-sm-2">Result Code</dt>
    <dd class="col-sm-10">@Model.ResultCode</dd>
    <dt class="col-sm-2">Result Message</dt>
    <dd class="col-sm-10">@Model.ResultMessage</dd>
    <dt class="col-sm-2">Local Verify</dt>
    <dd class="col-sm-10">@(Model.Verified ? "Onayland&#305;" : "Onaylanamad&#305;")</dd>
    <dt class="col-sm-2">Local Expected Hash</dt>
    <dd class="col-sm-10">@Model.LocalExpectedHash</dd>
    <dt class="col-sm-2">API Verify</dt>
    <dd class="col-sm-10">@(Model.ApiVerified ? "Onayland&#305;" : "Hay&#305;r")</dd>
    <dt class="col-sm-2">API Expected Hash</dt>
    <dd class="col-sm-10">@Model.ApiExpectedHash</dd>
    @if (Model.Verified && Model.OrderId.HasValue)
    {
        <dt class="col-sm-2">Sipari&#351; No</dt>
        <dd class="col-sm-10">@Model.OrderId</dd>
    }
</dl>
@if (Model.Verified)
{
    <p>&#214;deme do&#287;ruland&#305; ve sipari&#351; olu&#351;turuldu.</p>
}
<p>
    <a class="btn btn-secondary" asp-controller="DealerPayment" asp-action="Create">Yeni &#214;deme</a>
    <a class="btn btn-link" asp-controller="Orders" asp-action="Index">Sipari&#351; Listesi</a>
</p>
